<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/loginStyle"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            style="@style/linearLayoutStyle">

            <ImageView
                android:id="@+id/destinationImage"
                android:layout_width="308dp"
                android:layout_height="200dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destinationName"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                style="@style/onlyTextStyle"
                android:gravity="center"

                android:drawablePadding="8dp"/>
            <TextView
                android:id="@+id/destinationLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                style="@style/onlyTextStyle"

                android:gravity="center"
                android:drawablePadding="8dp" />
            <TextView
                android:id="@+id/destinationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                style="@style/onlyTextStyle"

                android:gravity="center"
                android:drawablePadding="8dp" />


            <TextView
                android:id="@+id/destinationType"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="2dp"
                style="@style/onlyTextStyle"
                android:textAlignment="center"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destinationDescription"
                android:gravity="center"
                android:padding="2dp"
                style="@style/onlyTextStyle"
                android:drawablePadding="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/edit"
                android:id="@+id/editButton"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                style="@style/buttonStyle"
                app:cornerRadius = "20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/delete"
                android:id="@+id/deleteButton"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/buttonStyle"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>