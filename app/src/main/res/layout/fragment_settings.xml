<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/loginStyle"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            style="@style/linearLayoutStyle">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="308dp"
                android:layout_height="80dp"
                style="@style/logoStyle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/darkModeText"
                    android:layout_marginTop="0dp"
                    android:hint="@string/darkMode"
                    android:gravity="left|center"
                    style="@style/onlyTextStyle"
                    android:drawablePadding="8dp"/>
                <Switch
                    android:id="@+id/darkModeSwitch"
                    android:layout_width="wrap_content"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/satelliteText"
                    android:layout_marginTop="0dp"
                    android:hint="@string/satelliteMode"
                    android:gravity="left|center"
                    style="@style/onlyTextStyle"
                    android:drawablePadding="8dp"/>
                <Switch
                    android:id="@+id/satelliteSwitch"
                    android:layout_width="wrap_content"
                    android:gravity="center|end"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/languageText"
                    android:layout_marginTop="0dp"
                    android:hint="@string/language"
                    android:padding="20dp"

                    android:gravity="left|center"
                    style="@style/onlyTextStyle"
                    android:drawablePadding="8dp"/>
                <Spinner
                    android:id="@+id/language"
                    android:layout_width="wrap_content"
                    android:hint="Select a language"
                    android:spinnerMode="dropdown"
                    style="@style/onlyTextStyle"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:gravity="center"

                android:layout_marginTop="10dp"
                style="@style/buttonStyle"
                app:cornerRadius = "20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/back"
                android:id="@+id/backButton"
                android:textSize="18sp"
                android:gravity="center"

                android:layout_marginTop="10dp"
                style="@style/buttonStyle"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>